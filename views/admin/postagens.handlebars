<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagem/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descrição: {{descricao}}</p>
      <small>Data: {{date}}</small><br>
      <small>Categoria: {{categoria.nome}}</small><br>
      <a href='/admin/postagens/edit/{{_id}}'><button class="btn btn-success mt-4">Editar postagem</button></a>
      <a href='/admin/postagens/delete/{{_id}}'><button class="btn btn-danger mt-4">Deletar postagem</button></a>
    </div>
  </div>
{{else}}
  <p>Nenhuma postagem registrada!</p>
{{/each}}